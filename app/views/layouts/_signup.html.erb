<div id = "signup-form", class = "form-shell">
<div id = "navigation-form">
  <div class="pseudo">
    <span class = "signin-link links">Войти</span>
    <span class = "signup-link links">Регистрация</span>
  </div>
</div>

<% @client = Client.new %>
<%# form_for @client, remote: true, :html => {:multipart => true} do |f| %>
<%= form_for @client, remote: true do |f| %>
  <h2>Регистрация</h2>

  <fieldset>
  <legend>Введите сведения о пользователе</legend>

  <div class = "field radio-buttons">
    <div class = "radio-buttons">
      <%= radio_button 'client', 'type_user', 1, checked: true, id: "radio-builder", class: "css-checkbox" %>
      <label for = "radio-builder" class = "css-label label-radio ">Строитель</label>
      <%= radio_button 'client', 'type_user', 0, id: "radio-client", class: "css-checkbox" %>
      <label for = "radio-client" class = "css-label label-radio ">Заказчик</label>
    </div>
  </div>

  <div id = "signup-name" class="field">
    <%= f.text_field :name, :placeholder => "ФИО" %>
  </div>

  <div id = "signup-email" class="field">
    <%= f.text_field :email, :placeholder => "Email" %>
  </div>

  <div id = "signup-password" class="field">
    <%= f.password_field :password, :placeholder => "Пароль"%>
  </div>

  <div id = "signup-password-conf" class="field">
    <%= f.password_field :password_confirmation, :placeholder => "Подтверждение" %>
  </div>

  <div class="actions">
    <%= f.submit :class => "button middle_green", :value => 'Создать' %>
  </div>

  </fieldset>
<% end %>

<div class="forgot_pass">
  Забыли пароль? 
  <span class = "reset-link">Восстановить</span>
  <%# link_to "Забыли пароль?", new_password_reset_path, class: "reset-link" %>
</div>

</div><!--/form-shell-->
